from re import X
import random

diccionario = []
listado = open("LISTADO PALABRAS.txt", mode= "r")

def filtrar_palabras():
    cantidad_de_palabras = 0
    for item in listado:
        if len(item) == 6:
            diccionario.append(item.strip("\n"))
            cantidad_de_palabras += 1
    return print("La cantidad de palabras es {}" .format(cantidad_de_palabras))

def eleccion():
    palabra_elegida = random.choice(diccionario)
    return print(palabra_elegida)

def evaluar_palabra():
    a = input("INTRODUCIR PALABRA DE 5 LETRAS:  ")
    while a not in diccionario:
        if a not in listado:
            print("!!! ERROR: La palabra introducida no esta en el diccionario")
        if len(a) != 5:
            print("!!! ERROR: La palabra introducida no tiene 5 letras.")
        if a.isnumeric() == True:
            print("!!! ERROR: La palabra introducida contiene numeros.")
        a = input("INTRODUCIR PALABRA DE 5 LETRAS:  ")
    print("La palabra esta en el diccionario")
    
        



if __name__ == "__main__":
    filtrar_palabras()
    evaluar_palabra()
